<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t('messages.listing', model: @questions.model_name.human(count: 2))%></h1>
  </div>
</div>

<%#= @admins.inspect %>
<div class="table-responsive">
  <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
    <div class="row">

      <div class="col-sm-12 col-md-6">
        <div id="dataTable_filter" class="dataTables_filter">
          <label>Search:
            <input type="search" class="form-control form-control-sm" placeholder="" aria-controls="dataTable">
          </label>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
          <thead>
          <tr>
            <th rowspan="1" colspan="1">#</th>
            <th rowspan="1" colspan="1"><%= translate_attribute(@questions, :description) %></th>
            <th rowspan="1" colspan="1"><%= translate_attribute(@questions, :subject) %></th>
            <th rowspan="1" colspan="1">
              <%= link_to new_admins_backoffice_question_path, id: "novo", class:"btn btn-success btn-circle" do %>
                <i class="fa fa-plus"></i>
              <% end %>
            </th>
          </tr>
          </thead>
          <tbody>
            <% @questions.each do |question| %>
              <tr role="row" class="odd">
                <td class="sorting_1"><%= question.id %></td>
                <td><%= question.description.truncate(50) %></td>
                <td><%= question.subject.description.truncate(30) %></td>
                <td style="width: 120px">
                  <!--
                  <#%= link_to edit_admins_backoffice_admin_path(admin), :class => "btn btn-primary btn-circle"%>
                    <i class="fa fa-edit"></i>
                  -->                
                  <%= link_to edit_admins_backoffice_question_path(question),id: "editar", class:"btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>                 
                  <%= link_to admins_backoffice_question_path(question), method: :delete,id: "apagar", class:"btn btn-danger btn-circle", data: { confirm: t('messages.confirm_with', item: question.description.truncate(15))} do %>
                    <i class="fa fa-minus"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= paginate @questions %>
  </div>
  </div>
